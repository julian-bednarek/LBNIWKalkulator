<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/number_input"
    android:layout_width="@dimen/input_entry_width"
    android:layout_height="@dimen/input_entry_height"
    android:background="@drawable/entry_shape"
    android:theme="@style/Theme.AppCompat">

    <EditText
        android:id="@+id/actual_input"
        android:layout_width="60dp"
        android:layout_height="@dimen/input_entry_height"
        android:autofillHints="0.0"
        android:textColorHint="@color/default_text_color"
        android:hint="@string/null_str"
        android:importantForAccessibility="yes"
        android:inputType="none"
        android:textColor="@color/default_text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="6dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/suffix_label"
        android:layout_width="30dp"
        android:layout_height="@dimen/input_entry_height"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:text="@string/null_str"
        android:textColor="@color/default_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
