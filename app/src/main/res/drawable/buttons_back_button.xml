<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background with rounded corners, border, padding, and rectangular shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#B0B0B0"/> <!-- Light gray background -->
                    <corners android:radius="12dp"/> <!-- More rounded corners -->
                    <stroke android:color="#808080" android:width="2dp"/> <!-- Border -->
                    <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/> <!-- Padding -->
                </shape>
            </item>
            <!-- Arrow -->
            <item>
                <vector
                    android:width="24dp"
                    android:height="24dp"
                    android:viewportWidth="24"
                    android:viewportHeight="24">
                    <!-- Arrow shaft (rectangle) -->
                    <path
                        android:fillColor="#808080"
                        android:pathData="M4,10 H20 V14 H4 Z"/>
                    <!-- Arrowhead (triangle) -->
                    <path
                        android:fillColor="#808080"
                        android:pathData="M6,6 L2,12 L6,18"/>
                </vector>
            </item>
        </layer-list>
    </item>

    <!-- Default (normal) state -->
    <item>
        <layer-list>
            <!-- Background with rounded corners, border, padding, and rectangular shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#DDDDDD"/> <!-- Light gray background -->
                    <corners android:radius="12dp"/> <!-- More rounded corners -->
                    <stroke android:color="#808080" android:width="2dp"/> <!-- Border -->
                    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/> <!-- Padding -->
                </shape>
            </item>
            <!-- Arrow -->
            <item>
                <vector
                    android:width="24dp"
                    android:height="24dp"
                    android:viewportWidth="24"
                    android:viewportHeight="24">
                    <!-- Arrow shaft (rectangle) -->
                    <path
                        android:fillColor="#808080"
                        android:pathData="M4,10 H20 V14 H4 Z"/>
                    <!-- Arrowhead (triangle) -->
                    <path
                        android:fillColor="#808080"
                        android:pathData="M6,6 L2,12 L6,18"/>
                </vector>
            </item>
        </layer-list>
    </item>
</selector>
